        "thumbBorderColor": "selectionBackground",
        "hoverThumbColor": "focusedBorder",
        "hoverThumbBorderColor": "focusedBorder",
        "hoverTrackColor": "border"
      }
    },
    "TabbedPane": {
      "background": "background",
      "focusColor": "selectionBackground",
      "foreground": "foreground",
      "hoverColor": "hoverBackground"
    },
    "Table": {
      "background": "background",
      "foreground": "foreground",
      "gridColor": "border",
      "selectionBackground": "selectionBackground",
      "selectionForeground": "foreground",
      "stripeColor": "hoverBackground"
    },
    "TextField": {
      "background": "background",
      "foreground": "foreground",
      "inactiveForeground": "inactiveForeground",
      "selectionBackground": "selectionBackground",
      "selectionForeground": "foreground"
    },
    "Tree": {
      "background": "background",
      "foreground": "foreground",
      "rowHeight": 22,
      "selectionBackground": "selectionBackground",
      "selectionForeground": "foreground"
    }
