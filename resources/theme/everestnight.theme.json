        "background": "altBackground"
      },
      "Notification": {
        "hoverBackground": "hoverBackground"
      }
    },
    "Panel.background": "background",
    "Popup": {
      "paintBorder": true,
      "inactiveBorderColor": "border",
      "Toolbar.borderColor": "border",
      "separatorForeground": "foreground",

      "Header.activeBackground": "background",
      "Header.inactiveBackground": "altBackground"
