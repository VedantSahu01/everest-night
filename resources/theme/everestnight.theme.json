  "icons": {
    "ColorPalette": {
      "Actions.Grey": "buttonBackground",
      "Actions.Blue": "#58a6ff",
      "Actions.Green": "#56d364",
      "Actions.Orange": "#f0883e",
      "Actions.Red": "#ff7b72",
      "Tree.iconColor": "foreground",
      "Actions.Yellow": "#d29922",
      "Actions.GreyInline.Dark": "buttonBackground",

      "Objects.Blue": "#58a6ff",
      "Objects.Green": "#56d364",
      "Objects.Orange": "#f0883e",
      "Objects.Red": "#ff7b72",
      "Objects.Yellow": "#d29922",

      "Gray.Fill": "altBackground",
      "Gray.Stroke": "foreground",

      "Checkbox.Background.Default.Dark": "background",
      "Checkbox.Border.Default.Dark": "border",
      "Checkbox.Foreground.Selected.Dark": "foreground",
      "Checkbox.Focus.Wide.Dark": "focusedBorder",
      "Checkbox.Focus.Thin.Default.Dark": "focusedBorder",
      "Checkbox.Focus.Thin.Selected.Dark": "focusedBorder",
      "Checkbox.Background.Disabled.Dark": "background",
