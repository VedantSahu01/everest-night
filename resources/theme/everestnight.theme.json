      "background": "background",
      "foreground": "foreground",
      "modifiedItemForeground": "inactiveForeground",
      "nonEditableBackground": "background"
    },
    "CompletionPopup": {
      "selectionBackground": "altBackground",
      "selectionInactiveBackground": "altBackground",
      "matchForeground": "focusedBorder"
