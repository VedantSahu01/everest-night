{
  "name": "Everest Night Theme",
  "dark": true,
  "author": "Vedant Sahu <vedant.sahu2001@gmail.com>",
  "editorScheme": "/theme/scheme/everest-night-schema.xml",
  "colors": {
    "background": "#0e1622",
