    "Button": {
      "endBackground": "buttonBackground",
      "endBorderColor": "buttonBackground",
      "focusedBorderColor": "buttonBackground",
      "shadowColor": "buttonBackground",
      "startBackground": "buttonBackground",
      "startBorderColor": "buttonBackground",
      "disabledBorderColor": "buttonBackground",
      "default": {
        "foreground": "foreground",
        "endBackground": "secondaryButtonBackground",
        "endBorderColor": "secondaryButtonBackground",
        "focusedBorderColor": "secondaryButtonBackground",
        "shadowColor": "secondaryButtonBackground",
        "startBackground": "secondaryButtonBackground",
        "startBorderColor": "secondaryButtonBackground"
      }
    },
    "CheckBox": {
